# ============================================================================
# COLLAB PROJECT - ENVIRONMENT CONFIGURATION
# ============================================================================
# Copy this file to .env.local and update with your actual values
# For Docker deployments, use the environment-specific files in docker/[env]/.env.example
# ============================================================================

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
# PostgreSQL connection string
# Create a new database in your PostgreSQL server and get the connection string
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?sslmode=require
DATABASE_URL=

# ============================================================================
# REDIS CONFIGURATION
# ============================================================================
# Redis connection string for caching and real-time features
# Format: redis://[USER:PASSWORD@]HOST:PORT
REDIS_URL=

# ============================================================================
# AUTHENTICATION & SECURITY
# ============================================================================
# NextAuth secret key for authentication
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=

# NextAuth URL - Your application's base URL
NEXTAUTH_URL=

# Encryption key for sensitive data (e.g., GitHub access tokens)
# Must be base64 encoded, at least 32 bytes
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
ENCRYPTION_KEY=

# ============================================================================
# SECRETS VAULT (Notes Encryption)
# ============================================================================
# Master key for encrypting secret notes (ENV_VARS, API_KEYS, CREDENTIALS types)
# CRITICAL: Keep this key secure and backed up - losing it means losing access to all encrypted secrets
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# Example: 0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef
SECRETS_MASTER_KEY=

# ============================================================================
# GOOGLE OAUTH
# ============================================================================
# Google OAuth client credentials for authentication
# Create OAuth client in Google Cloud Console:
# https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# ============================================================================
# GITHUB INTEGRATION
# ============================================================================
# GitHub OAuth App credentials for authentication and integration
# Create a GitHub OAuth App: https://github.com/settings/developers
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_WEBHOOK_SECRET=

# ============================================================================
# CLOUDINARY (File Storage)
# ============================================================================
# Cloudinary credentials for image and file storage
# Create a Cloudinary account: https://cloudinary.com/
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# ============================================================================
# OPENAI (AI Integration)
# ============================================================================
# OpenAI API key for AI board generation & text improvement
# Create API key in OpenAI Console: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# ============================================================================
# EMAIL CONFIGURATION
# ============================================================================
# SMTP configuration for sending emails
# Use your preferred SMTP service (AWS SES, SendGrid, etc.)
EMAIL_HOST=
EMAIL_PORT=
EMAIL_SECURE=
EMAIL_USER=
EMAIL_PASSWORD=
EMAIL_FROM=

# ============================================================================
# PUSH NOTIFICATIONS (ONESIGNAL)
# ============================================================================
# OneSignal credentials for push notifications
# Create a OneSignal app: https://onesignal.com/
NEXT_PUBLIC_ONESIGNAL_APP_ID_DEV=
ONESIGNAL_API_KEY_DEV=
NEXT_PUBLIC_ONESIGNAL_APP_ID_PROD=
ONESIGNAL_API_KEY_PROD=
NEXT_PUBLIC_ONESIGNAL_APP_ID_UAT=
ONESIGNAL_API_KEY_UAT=

# ============================================================================
# WEB PUSH NOTIFICATIONS (VAPID)
# ============================================================================
# VAPID keys for web push notifications
# Generate with: npx web-push generate-vapid-keys
VAPID_PRIVATE_KEY=
VAPID_EMAIL=
NEXT_PUBLIC_VAPID_PUBLIC_KEY=

# ============================================================================
# REAL-TIME FEATURES (PUSHER)
# ============================================================================
# Pusher credentials for real-time communication
# Create a Pusher app: https://dashboard.pusher.com/
PUSHER_APP_ID=
PUSHER_KEY=
PUSHER_SECRET=
PUSHER_CLUSTER=

# ============================================================================
# COLLABORATIVE EDITING (HOCUSPOCUS)
# ============================================================================
# WebSocket URL for collaborative text editing
# Deploy your own Hocuspocus server: https://hocuspocus.org/
NEXT_PUBLIC_HOCUSPOCUS_URL=

# ============================================================================
# CHAT INTEGRATION
# ============================================================================
# ChatProject API key for live chat functionality
# Create account at: https://app.chatproject.io/
CHAT_PROJECT_API_KEY=

# ============================================================================
# APPLICATION URLS
# ============================================================================
# Public-facing URLs for your application
NEXT_PUBLIC_APP_URL=
NEXT_PUBLIC_API_URL=
WEBHOOK_BASE_URL=

# ============================================================================
# ERROR TRACKING (SENTRY) - Optional
# ============================================================================
# Sentry credentials for error tracking and monitoring
# Create a Sentry project: https://sentry.io/
SENTRY_DSN=
SENTRY_AUTH_TOKEN=

# ============================================================================
# COLLAB APPS STORE
# ============================================================================
# App Store Issuer - Your application URL
AS_ISSUER=
# App Tokens Key - Generate with: openssl rand -hex 16
APP_TOKENS_KEY=
# Enable Apps Feature
NEXT_PUBLIC_FEATURE_APPS=true

# ============================================================================
# CONTENT SECURITY POLICY (CSP)
# ============================================================================
# CSP Report Only Mode (1 = report only, 0 = enforce)
CSP_REPORT_ONLY=1
# Define allowed sources for scripts, styles, images, frames, etc.
# Specify space-separated values (e.g., 'self https://trusted.cdn.com')
CSP_SCRIPT_SRC=
CSP_STYLE_SRC=
CSP_IMG_SRC=
CSP_FRAME_ANCESTORS=
CSP_FRAME_SRC=

# ============================================================================
# SLACK INTEGRATION - Optional
# ============================================================================
# Slack signing secret for verifying requests from Slack API
# Get from Slack app settings under "Basic Information" > "Signing Secret"
SLACK_SIGNING_SECRET=

# ============================================================================
# DEVELOPMENT OPTIONS
# ============================================================================
# Environment mode (development, production)
NODE_ENV=development

# Auto-seed database on startup (true/false)
# Set to true for development, false for production
SEED_DATABASE=false

# Debug mode for development
DEBUG=
