# ============================================================================
# UAT/STAGING ENVIRONMENT CONFIGURATION
# ============================================================================
# Copy this file to .env.uat.local and update with your actual UAT values
# This environment is for testing production-like configurations
# ============================================================================

# ============================================================================
# DATABASE CONFIGURATION (External - AWS RDS UAT)
# ============================================================================
DATABASE_URL="postgresql://username:password@your-uat-db-host:5432/collab_uat?sslmode=require"

# ============================================================================
# REDIS CONFIGURATION (External - Cloud Redis UAT)
# ============================================================================
REDIS_URL="redis://default:your-uat-redis-password@your-uat-redis-host:port"

# Redis connection details (for Redis Commander)
REDIS_HOST=your-uat-redis-host
REDIS_PORT=6379
REDIS_PASSWORD=your-uat-redis-password

# ============================================================================
# AUTHENTICATION & SECURITY (UAT)
# Generate a unique secret for UAT: openssl rand -base64 32
# ============================================================================
NEXTAUTH_SECRET="your-uat-nextauth-secret-min-32-chars"
NEXTAUTH_URL="https://uat-collab.your-domain.com"

# ============================================================================
# GOOGLE OAUTH (UAT)
# You can use separate UAT credentials or share with dev
# ============================================================================
GOOGLE_CLIENT_ID="your-uat-google-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-uat-google-client-secret"

# ============================================================================
# GITHUB INTEGRATION (UAT)
# Use separate UAT GitHub OAuth App or share with dev
# ============================================================================
GITHUB_CLIENT_ID="your-uat-github-client-id"
GITHUB_CLIENT_SECRET="your-uat-github-client-secret"
GITHUB_WEBHOOK_SECRET="your-uat-github-webhook-secret"

# ============================================================================
# CLOUDINARY (UAT)
# Can use same as dev or separate UAT credentials
# ============================================================================
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME="your-uat-cloud-name"
CLOUDINARY_API_KEY="your-uat-api-key"
CLOUDINARY_API_SECRET="your-uat-api-secret"

# ============================================================================
# OPENAI (UAT)
# Use separate API key to track UAT usage
# ============================================================================
OPENAI_API_KEY="sk-proj-your-uat-openai-api-key"

# ============================================================================
# EMAIL CONFIGURATION (UAT - AWS SES)
# Use UAT SMTP to prevent sending emails to real users
# ============================================================================
EMAIL_HOST="email-smtp.your-region.amazonaws.com"
EMAIL_PORT=465
EMAIL_SECURE=true
EMAIL_USER="your-uat-smtp-user"
EMAIL_PASSWORD="your-uat-smtp-password"
EMAIL_FROM="noreply-uat@your-domain.com"

# ============================================================================
# PUSH NOTIFICATIONS (ONESIGNAL) - UAT
# Use separate UAT OneSignal app
# ============================================================================
NEXT_PUBLIC_ONESIGNAL_APP_ID_UAT="your-uat-onesignal-app-id"
ONESIGNAL_API_KEY_UAT="your-uat-onesignal-api-key"

# Web Push Notifications (VAPID) - UAT
# Generate separate keys for UAT: npx web-push generate-vapid-keys
VAPID_PRIVATE_KEY="your-uat-vapid-private-key"
VAPID_EMAIL="mailto:admin-uat@your-domain.com"
NEXT_PUBLIC_VAPID_PUBLIC_KEY="your-uat-vapid-public-key"
ENCRYPTION_KEY="your-uat-encryption-key-base64"

# ============================================================================
# REAL-TIME FEATURES (PUSHER) - UAT
# Can use same as dev or separate UAT credentials
# ============================================================================
PUSHER_APP_ID="your-uat-pusher-app-id"
PUSHER_KEY="your-uat-pusher-key"
PUSHER_SECRET="your-uat-pusher-secret"
PUSHER_CLUSTER="your-pusher-cluster"

# WebSocket URL for collaborative editing (UAT)
NEXT_PUBLIC_HOCUSPOCUS_URL="wss://uat-collab-socket.your-domain.com/ws"

# ============================================================================
# CHAT INTEGRATION - UAT
# Use separate UAT chat API key
# ============================================================================
CHAT_PROJECT_API_KEY="your-uat-chat-api-key"

# ============================================================================
# APPLICATION URLS (UAT)
# ============================================================================
NEXT_PUBLIC_APP_URL="https://uat-collab.your-domain.com"
NEXT_PUBLIC_API_URL="https://uat-collab.your-domain.com/api"
WEBHOOK_BASE_URL="https://uat-collab.your-domain.com"

# ============================================================================
# COLLAB APPS STORE
# ============================================================================
AS_ISSUER="https://uat-collab.your-domain.com"
# Generate with: openssl rand -hex 16
APP_TOKENS_KEY="your-uat-app-tokens-key"
NEXT_PUBLIC_FEATURE_APPS="true"

# ============================================================================
# CONTENT SECURITY POLICY (CSP)
# ============================================================================
CSP_REPORT_ONLY="1"
CSP_SCRIPT_SRC="https://api.chatproject.io https://static.hotjar.com"
CSP_STYLE_SRC="https://api.chatproject.io https://fonts.googleapis.com"
CSP_IMG_SRC="https://res.cloudinary.com https://images.unsplash.com https: http:"
CSP_FRAME_ANCESTORS="https://teams.your-domain.com https://uat-collab.your-domain.com"
CSP_FRAME_SRC="https://teams.your-domain.com https://uat-collab.your-domain.com"

# ============================================================================
# UAT OPTIONS
# Can enable seeding for testing purposes
# ============================================================================
SEED_DATABASE=false
NODE_ENV=production
