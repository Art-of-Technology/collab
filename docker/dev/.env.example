# ============================================================================
# DEVELOPMENT ENVIRONMENT CONFIGURATION
# ============================================================================
# Copy this file to .env and update with your actual values
# ============================================================================

# ============================================================================
# DATABASE CONFIGURATION (External - Neon PostgreSQL)
# ============================================================================
DATABASE_URL="postgresql://username:password@your-neon-host.aws.neon.tech/your_database?sslmode=require"

# ============================================================================
# REDIS CONFIGURATION (External - Cloud Redis)
# ============================================================================
REDIS_URL="redis://default:your-redis-password@your-redis-host:port"

# Redis connection details (for Redis Commander)
REDIS_HOST=your-redis-host
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password

# ============================================================================
# AUTHENTICATION & SECURITY (Development)
# ============================================================================
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="your-nextauth-secret-min-32-chars"
NEXTAUTH_URL="https://dev-collab.your-domain.com"

# ============================================================================
# GOOGLE OAUTH (Development)
# ============================================================================
GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# ============================================================================
# GITHUB INTEGRATION (Development)
# ============================================================================
GITHUB_CLIENT_ID="your-github-client-id"
GITHUB_CLIENT_SECRET="your-github-client-secret"
GITHUB_WEBHOOK_SECRET="your-github-webhook-secret"

# ============================================================================
# CLOUDINARY (Development)
# ============================================================================
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME="your-cloudinary-cloud-name"
CLOUDINARY_API_KEY="your-cloudinary-api-key"
CLOUDINARY_API_SECRET="your-cloudinary-api-secret"

# ============================================================================
# OPENAI (Development)
# ============================================================================
OPENAI_API_KEY="sk-proj-your-openai-api-key"

# ============================================================================
# EMAIL CONFIGURATION (Development - AWS SES)
# ============================================================================
EMAIL_HOST="email-smtp.your-region.amazonaws.com"
EMAIL_PORT=465
EMAIL_SECURE=true
EMAIL_USER="your-smtp-user"
EMAIL_PASSWORD="your-smtp-password"
EMAIL_FROM="noreply@your-domain.com"

# ============================================================================
# PUSH NOTIFICATIONS (ONESIGNAL) - Development
# ============================================================================
NEXT_PUBLIC_ONESIGNAL_APP_ID_DEV="your-onesignal-app-id"
ONESIGNAL_API_KEY_DEV="your-onesignal-api-key"

# Web Push Notifications (VAPID) - Development
# Generate with: npx web-push generate-vapid-keys
VAPID_PRIVATE_KEY="your-vapid-private-key"
VAPID_EMAIL="mailto:admin@your-domain.com"
NEXT_PUBLIC_VAPID_PUBLIC_KEY="your-vapid-public-key"
ENCRYPTION_KEY="your-encryption-key-base64"

# ============================================================================
# REAL-TIME FEATURES (PUSHER) - Development
# ============================================================================
PUSHER_APP_ID="your-pusher-app-id"
PUSHER_KEY="your-pusher-key"
PUSHER_SECRET="your-pusher-secret"
PUSHER_CLUSTER="your-pusher-cluster"

# WebSocket URL for collaborative editing (Development)
NEXT_PUBLIC_HOCUSPOCUS_URL="wss://your-websocket-domain.com/ws"

# ============================================================================
# CHAT INTEGRATION - Development
# ============================================================================
CHAT_PROJECT_API_KEY="your-chat-api-key"

# ============================================================================
# APPLICATION URLS (Development)
# ============================================================================
NEXT_PUBLIC_APP_URL="https://dev-collab.your-domain.com"
NEXT_PUBLIC_API_URL="https://dev-collab.your-domain.com/api"
WEBHOOK_BASE_URL="https://dev-collab.your-domain.com"

# ============================================================================
# COLLAB APPS STORE
# ============================================================================
AS_ISSUER="https://dev-collab.your-domain.com"
# Generate with: openssl rand -hex 16
APP_TOKENS_KEY="your-app-tokens-key"
NEXT_PUBLIC_FEATURE_APPS="true"

# ============================================================================
# CONTENT SECURITY POLICY (CSP)
# ============================================================================
CSP_REPORT_ONLY="1"
CSP_SCRIPT_SRC="https://api.chatproject.io https://static.hotjar.com"
CSP_STYLE_SRC="https://api.chatproject.io https://fonts.googleapis.com"
CSP_IMG_SRC="https://res.cloudinary.com https://images.unsplash.com https: http:"
CSP_FRAME_ANCESTORS="https://teams.your-domain.com https://dev-collab.your-domain.com"
CSP_FRAME_SRC="https://teams.your-domain.com https://dev-collab.your-domain.com"

# ============================================================================
# DEVELOPMENT OPTIONS
# ============================================================================
SEED_DATABASE=false
NODE_ENV=development
DEBUG=collab:*
