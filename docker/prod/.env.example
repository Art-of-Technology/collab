# ============================================================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# ============================================================================
# Copy this file to .env.prod.local and update with your actual production values
# ⚠️ NEVER commit actual production credentials to version control
# ============================================================================

# ============================================================================
# DATABASE CONFIGURATION (External - AWS RDS Production)
# ============================================================================
DATABASE_URL="postgresql://username:password@your-prod-db-host:5432/collab_prod?sslmode=require"

# ============================================================================
# REDIS CONFIGURATION (External - Cloud Redis Production)
# ============================================================================
REDIS_URL="redis://default:your-redis-password@your-redis-host:port"

# Redis connection details (for Redis Commander)
REDIS_HOST=your-redis-host
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password

# ============================================================================
# AUTHENTICATION & SECURITY (Production)
# ⚠️ Generate a strong secret: openssl rand -base64 32
# ============================================================================
NEXTAUTH_SECRET="your-production-nextauth-secret-min-32-chars"
NEXTAUTH_URL="https://your-production-domain.com"

# ============================================================================
# GOOGLE OAUTH (Production)
# ⚠️ Use production OAuth credentials from Google Cloud Console
# ============================================================================
GOOGLE_CLIENT_ID="your-production-google-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-production-google-client-secret"

# ============================================================================
# GITHUB INTEGRATION (Production)
# ⚠️ Use production GitHub OAuth App credentials
# ============================================================================
GITHUB_CLIENT_ID="your-production-github-client-id"
GITHUB_CLIENT_SECRET="your-production-github-client-secret"
GITHUB_WEBHOOK_SECRET="your-production-github-webhook-secret"

# ============================================================================
# CLOUDINARY (Production)
# ⚠️ Use production Cloudinary credentials
# ============================================================================
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME="your-production-cloud-name"
CLOUDINARY_API_KEY="your-production-api-key"
CLOUDINARY_API_SECRET="your-production-api-secret"

# ============================================================================
# OPENAI (Production)
# ⚠️ Use production OpenAI API key with appropriate rate limits
# ============================================================================
OPENAI_API_KEY="sk-proj-your-production-openai-api-key"

# ============================================================================
# EMAIL CONFIGURATION (Production - AWS SES)
# ⚠️ Use production SMTP credentials
# ============================================================================
EMAIL_HOST="email-smtp.your-region.amazonaws.com"
EMAIL_PORT=465
EMAIL_SECURE=true
EMAIL_USER="your-production-smtp-user"
EMAIL_PASSWORD="your-production-smtp-password"
EMAIL_FROM="noreply@your-production-domain.com"

# ============================================================================
# PUSH NOTIFICATIONS (ONESIGNAL) - Production
# ⚠️ Use production OneSignal credentials
# ============================================================================
NEXT_PUBLIC_ONESIGNAL_APP_ID_PROD="your-production-onesignal-app-id"
ONESIGNAL_API_KEY_PROD="your-production-onesignal-api-key"

# Web Push Notifications (VAPID) - Production
# Generate with: npx web-push generate-vapid-keys
VAPID_PRIVATE_KEY="your-production-vapid-private-key"
VAPID_EMAIL="mailto:admin@your-production-domain.com"
NEXT_PUBLIC_VAPID_PUBLIC_KEY="your-production-vapid-public-key"
ENCRYPTION_KEY="your-production-encryption-key-base64"

# ============================================================================
# REAL-TIME FEATURES (PUSHER) - Production
# ⚠️ Use production Pusher credentials
# ============================================================================
PUSHER_APP_ID="your-production-pusher-app-id"
PUSHER_KEY="your-production-pusher-key"
PUSHER_SECRET="your-production-pusher-secret"
PUSHER_CLUSTER="your-pusher-cluster"

# WebSocket URL for collaborative editing (Production)
NEXT_PUBLIC_HOCUSPOCUS_URL="wss://your-production-websocket-domain.com/ws"

# ============================================================================
# CHAT INTEGRATION - Production
# ⚠️ Use production chat API key
# ============================================================================
CHAT_PROJECT_API_KEY="your-production-chat-api-key"

# ============================================================================
# APPLICATION URLS (Production)
# ============================================================================
NEXT_PUBLIC_APP_URL="https://your-production-domain.com"
NEXT_PUBLIC_API_URL="https://your-production-domain.com/api"
WEBHOOK_BASE_URL="https://your-production-domain.com"

# ============================================================================
# COLLAB APPS STORE
# ⚠️ Generate a unique production APP_TOKENS_KEY: openssl rand -hex 16
# ============================================================================
AS_ISSUER="https://your-production-domain.com"
APP_TOKENS_KEY="your-production-app-tokens-key"
NEXT_PUBLIC_FEATURE_APPS="true"

# ============================================================================
# CONTENT SECURITY POLICY (CSP)
# ============================================================================
CSP_REPORT_ONLY="0"
CSP_SCRIPT_SRC="https://api.chatproject.io https://static.hotjar.com"
CSP_STYLE_SRC="https://api.chatproject.io https://fonts.googleapis.com"
CSP_IMG_SRC="https://res.cloudinary.com https://images.unsplash.com https: http:"
CSP_FRAME_ANCESTORS="https://teams.your-domain.com https://your-production-domain.com"
CSP_FRAME_SRC="https://teams.your-domain.com https://your-production-domain.com"

# ============================================================================
# PRODUCTION OPTIONS
# ⚠️ Do not seed database in production unless explicitly needed
# ============================================================================
SEED_DATABASE=false
NODE_ENV=production
