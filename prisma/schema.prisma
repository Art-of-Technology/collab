  major         Int
  minor         Int
  patch         Int
  prerelease    String?       // e.g., "alpha.1"
  buildMetadata String?
  releaseType   ReleaseType   // MAJOR, MINOR, PATCH
  status        VersionStatus // PENDING, RELEASED, FAILED, CANCELLED
  environment   String        // development, staging, production
  branch        String?       // Branch this version was created from
  releasedAt    DateTime?
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  
  // Version inheritance tracking
  parentVersionId String?     // Reference to the development version this production version inherits from
  isProduction    Boolean     @default(false) // True if this is a production release
  
  // AI-generated content for better changelog
  aiSummary     String?       // AI-generated version summary
  aiChangelog   String?       // AI-generated changelog content
  
  repository    Repository    @relation(fields: [repositoryId], references: [id], onDelete: Cascade)
  parentVersion Version?      @relation("VersionInheritance", fields: [parentVersionId], references: [id])
  childVersions Version[]     @relation("VersionInheritance")
  issues        VersionIssue[]
  releases      Release[]
  deployments   Deployment[]
  versionFiles  VersionFile[]
  changelogEntries ChangelogEntry[]
  
  @@unique([repositoryId, version])
  @@index([repositoryId, status])
  @@index([repositoryId, environment])
  @@index([repositoryId, branch])
  @@index([parentVersionId])
  @@index([status])
}

